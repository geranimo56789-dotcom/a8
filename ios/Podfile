# Flutter Podfile
# Generated by CI setup to ensure CocoaPods resolves correctly.

platform :ios, '13.0'

# CocoaPods analytics sends network stats.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Flutter integration helper (generated by Flutter tool)
flutter_application_path = File.expand_path('..', __dir__)
require File.join(flutter_application_path, 'Flutter', 'podhelper.rb')

# If you use use_frameworks!/use_modular_headers!, add here if needed, but Flutter defaults are fine for most apps.

install! 'cocoapods', :deterministic_uuids => false

target 'Runner' do
  use_frameworks!
  use_modular_headers!
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    # Ensure iOS 13.0 minimum across all pods to satisfy plugin constraints.
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end
  end
  # Apply Flutter post_install hooks (Swift concurrency, etc.).
  flutter_additional_ios_build_settings(installer)
end
